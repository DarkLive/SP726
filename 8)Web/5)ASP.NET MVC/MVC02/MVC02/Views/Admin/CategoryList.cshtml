@model IEnumerable<MVC02.Models.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Main{
    <h2>CategoryList</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.catName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.catName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Category/Edit", new { id = item.catID }) |
                    @Html.ActionLink("Details", "Category/Details", new { id = item.catID }) |
                </td>
            </tr>
        }

    </table>
}
