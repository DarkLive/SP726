<script src="~/js/jquery/jQuery3-3-1.js"></script>
<script>
    $(document).ready(function () {

        //Login
        $("#loginForm").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: "/Account/Login",
                method: "POST",
                data: new FormData(this),
                contentType: false,
                cache: false,
                processData: false,
                success: function (isdone) {
                    if (isdone == "True") {
                        alert("Logged In");
                        location.reload();
                    } else { alert("Problem"); }
                },
                error: function () { alert("Error"); }
            });
        });

        //Register
        $("#registerForm").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: "/Account/Register",
                method: "POST",
                data: new FormData(this),
                contentType: false,
                cache: false,
                processData: false,
                success: function (isdone) {
                    if (isdone == "True") {
                        alert("Registered");
                        location.reload();
                    } else { alert("Problem"); }
                },
                error: function () { alert("Error"); }
            });
        });

        //Logout
        $("#logOut").click(function () {
            $.ajax({
                url: "/Account/Logout",
                method: "POST",
                success: function () { location.reload(); },
                error: function () { alert("Error"); }
            })
        });

        //Etc
        $(".shownavpass").click(function () {
            if ($(".upwd").attr("type") == "text") {
                $(".upwd").attr("type", "password");
                $(this).text("Hide");
            }
            else {
                $(".upwd").attr("type", "text");
                $(this).text("Show");
            }
        });
    });
</script>
@{if (Session["LoggedInAs"] == null) {
        <section class="modal" id="modalLog" tabindex="-1" role="dialog" aria-labelledby="modalLogLabel" aria-hidden="true">
            <section class="modal-dialog" role="document">
                <section class="modal-content">
                    <section class="modal-header">
                        <h5 class="modal-title" id="modalLogLabel">Edit</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </section>
                    <form name="loginForm" id="loginForm" enctype="multipart/form-data">
                        <section class="modal-body">
                            Email: <input name="usrEmail" type="email" class="form-control w-50" />
                            Password:<br /><input name="usrPassword" type="password" class="form-control w-50 float-left" />&nbsp;&nbsp;<button type="button" class="form-control float-left w-25 shownavpass">Show</button>
                        </section>
                        <section class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </section>
                    </form>
                </section>
            </section>
        </section>

        <section class="modal" id="modalReg" tabindex="-1" role="dialog" aria-labelledby="modalRegLabel" aria-hidden="true">
            <section class="modal-dialog" role="document">
                <section class="modal-content">
                    <section class="modal-header">
                        <h5 class="modal-title" id="modalRegLabel">Edit</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </section>
                    <form name="registerForm" id="registerForm" enctype="multipart/form-data">
                        <section class="modal-body">
                            Full Name: <input name="usrFullName" type="text" class="form-control w-50" />
                            Email: <input name="usrEmail" type="email" class="form-control w-50" />
                            Password:<br /><input name="usrPassword" type="password" class="form-control w-50 float-left" />&nbsp;&nbsp;<button type="button" class="form-control float-left w-25 shownavpass">Show</button><span class="clearfix"></span>
                            Birthday: <input name="usrBirthDay" type="date" class="form-control w-50" />
                            Image: <input name="usrpic" type="file" class="form-control w-50" />
                        </section>
                        <section class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </section>
                    </form>
                </section>
            </section>
        </section>
    }
}