<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/img/core-img/favicon.ico">
    <link rel="stylesheet" href="~/css/core-style.css">
    <link rel="stylesheet" href="~/style.css">
    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/js/popper.min.js" defer></script>
    <script src="~/js/bootstrap.min.js" defer></script>
    <script src="~/js/plugins.js" defer></script>
    <script src="~/js/active.js" defer></script>
    @RenderSection("Source", false)
</head>
<body>
    <!-- ##### Main Content Wrapper Start ##### -->
    <section class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <section class="mobile-nav">
            <!-- Navbar Brand -->
            <section class="amado-navbar-brand">
                <a href="index.html"><img src="~/img/core-img/logo.png" alt=""></a>
            </section>
            <!-- Navbar Toggler -->
            <section class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </section>
        </section>

        <!-- Header Area Start -->
        @Html.Partial("-Nav")
        <!-- Header Area End -->
        <!-- Product Catagories Area Start -->
        <section class="products-catagories-area clearfix">
            <section class="amado-pro-catagory clearfix mt-3">
                @RenderSection("Main")
            </section>
        </section>
        <!-- Product Catagories Area End -->
    </section>
    <!-- ##### Main Content Wrapper End ##### -->
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <section class="container">
            <section class="row align-items-center">
                <!-- Single Widget Area -->
                <section class="col-12 col-lg-4">
                    <section class="single_widget_area">
                        <!-- Logo -->
                        <section class="footer-logo mr-50">
                            <a href="/"><img src="~/img/core-img/logo.png" alt=""></a>
                        </section>
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a> & Re-distributed by <a href="https://themewagon.com/" target="_blank">Themewagon</a>
                            <a href="http://egeeturan.com">Modified/Almost Rewritten by Ege E. Turan</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </section>
                </section>
                <!-- Single Widget Area -->
                <section class="col-12 col-lg-8">
                    <section class="single_widget_area">
                        <!-- Footer Menu -->
                        <section class="footer_menu">
                            <nav class="navbar navbar-expand-lg justify-content-end">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>
                                <section class="collapse navbar-collapse" id="footerNavContent">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Articles">Articles</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Categories">Categories</a>
                                        </li>
                                    </ul>
                                </section>
                            </nav>
                        </section>
                    </section>
                </section>
            </section>
        </section>
    </footer>
    <!-- ##### Footer Area End ##### -->
    @RenderSection("Footer", false)
    @{if (Session["LoggedInAs"] == null) {
            <section class="modal" id="modalLog" tabindex="-1" role="dialog" aria-labelledby="modalLogLabel" aria-hidden="true">
                <section class="modal-dialog" role="document">
                    <section class="modal-content">
                        <section class="modal-header">
                            <h5 class="modal-title" id="modalLogLabel">Edit</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </section>
                        <form name="loginForm" id="loginForm">
                            <section class="modal-body">
                                Email: <input name="usrEmail" type="email" class="form-control w-50" />
                                Password:<br /><input name="usrPassword" type="password" class="form-control w-50 float-left upwd" />&nbsp;&nbsp;<button type="button" class="form-control float-left w-25 shownavpass">Show</button>
                            </section>
                            <section class="modal-footer">
                                <button type="submit" class="btn amado-btn">Login</button>
                                <button type="button" class="btn amado-btn active" data-dismiss="modal">Close</button>
                            </section>
                        </form>
                    </section>
                </section>
            </section>

            <section class="modal" id="modalReg" tabindex="-1" role="dialog" aria-labelledby="modalRegLabel" aria-hidden="true">
                <section class="modal-dialog" role="document">
                    <section class="modal-content">
                        <section class="modal-header">
                            <h5 class="modal-title" id="modalRegLabel">Edit</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </section>
                        <form name="registerForm" id="registerForm" enctype="multipart/form-data">
                            <section class="modal-body">
                                Full Name: <input name="usrFullName" type="text" class="form-control w-50" />
                                Email: <input name="usrEmail" type="email" class="form-control w-50" />
                                Password:<br /><input name="usrPassword" type="password" class="form-control w-50 float-left upwd" />&nbsp;&nbsp;<button type="button" class="form-control float-left w-25 shownavpass">Show</button><span class="clearfix"></span>
                                Birthday: <input name="usrBirthDay" type="date" class="form-control w-50" />
                                Image: <input name="usrpic" type="file" class="form-control w-50" />
                            </section>
                            <section class="modal-footer">
                                <button type="submit" class="btn amado-btn">Register</button>
                                <button type="button" class="btn amado-btn active" data-dismiss="modal">Close</button>
                            </section>
                        </form>
                    </section>
                </section>
            </section>
        }
    }
</body>
</html>
